
{% extends 'base.html.twig' %}

{% block title %}data submission status{% endblock %}

{% block body %}
    <h1>data submission status</h1>

    <table class="table">
        <thead>
            <tr>

            <th>owner</th>
            <th>submitted</th>
              <th>years</th>
            <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set n=1 %}
        {% for row in data %}
            <tr>
                <td>{{ n }}</td>
                {% set n=n+1 %}
            <tr>
                <td>{{ row.ownerid}}</td>
                <td>{{ row.submitted }}</td>
                <td>{{ row.yearss }}</td>
                <td>
                <a href="{{ path('submission_show', {'id': row.id}) }}" class="btn btn-sm btn-success"><span class="fa fa-eye" title="View detail"></span></a>
                <a href="{{ path( 'submission_edit', {'id': row.id}) }}" class="btn btn-sm btn-warning"><span class="fa fa-edit" title="Edit"></span></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('submission_new') }}">Create new</a>
{% endblock %}
