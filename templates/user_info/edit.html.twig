{% extends 'base.html.twig' %}

{% block title %}Edit Profile
{% endblock %}


{% block pageheader %}

	<h1>
		Edit Your profile
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>

		</small>

	</h1>
{% endblock %}


{% block breadcrumb %}
	<li>
		<i class="ace-icon fa fa-home home-icon"></i>
		<a href="{{ path('home') }}">Home</a>
	</li>
	<li>
		<i class="ace-icon fa fa-user home-icon"></i>
		<a href="{{ path('home') }}">Profile</a>
	</li>
	<li class="active">Edit</li>
{% endblock %}

{% block body %}


	<div id="user-profile-3" class="user-profile row">


		<!-- -
								                        		<button type="button" class="close" data-dismiss="alert">&times;</button>
								                        		&nbsp; -->


		<!-- /.well --><div class="space"> </div>

		{{  form_start(form,{"attr":{"class":"form-horizontal"}}) }}
		<div class="tabbable">


			<div class="tab-content profile-edit-tab-content">
				<div id="edit-basic" class="tab-pane active">


					<div class="space"></div>
					<h4 class="header blue bolder smaller">
						{% if app.user.UserInfo %}
							Edit
						{% else %}
							Enter
						{% endif %}
						your Information</h4>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right">First Name</label>

						<div class="col-sm-9">
								{{ form_widget(form.FirstName) }}
                                {{ form_widget(form._token,{"attr":{"type":"hidden"}}) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>
                    	<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right">Middle Name</label>

						<div class="col-sm-9">
								{{ form_widget(form.MiddleName) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>
                    	<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right">Last Name</label>

						<div class="col-sm-9">
							
								{{ form_widget(form.LastName) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>

					<div class="space-4"></div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Sex</label>

						<div class="col-sm-9">
                        <span class="input-icon">
								{{ form_widget(form.Sex) }}
								<i class="ace-icon"></i>
						</span>
						</div>
					</div>


					<div class="space-4"></div>
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Address</label>

						<div class="col-sm-9">
								{{ form_widget(form.Address) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Phone</label>
						<div class="col-sm-9">
								{{ form_widget(form.phone) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>
					<div class="space-4"></div>
					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Affiliation</label>

						<div class="col-sm-9">
								{{ form_widget(form.Affiliation   ) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-3 control-label no-padding-right" for="form-field-facebook">Profile picture</label>
						<div class="col-sm-9">
								{{ form_widget(form.image) }}
								<i class="ace-icon"></i>
							
						</div>
					</div>


				</div>


			</div>
		</div>

		<div class="clearfix form-actions">
			<div class="col-md-offset-3 col-md-9">
				<button class="btn btn-info">{{ button_label|default('Save') }}
					<i class="ace-icon fa fa-check bigger-110"></i>
				</button>


				&nbsp; &nbsp;
				<button class="btn" type="reset">
					<i class="ace-icon fa fa-undo bigger-110"></i>
					Reset
				</button>
			</div>
		</div>
		{{ form_end(form, {'render_rest': false}) }}
	</div>
	<!-- /.span -->
</div>{% endblock %}
