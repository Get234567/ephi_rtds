            <!-- SmartWizard html -->
            <div id="smartwizard">
                <ul>
                    <li>
                        <a href="#step-1">Step 1<br/>
                                <small></small>
                            </a>
                        </li>
                        <li>
                            <a href="#step-2">Step 2<br/>
                                    <small></small>
                                </a>
                            </li>
                            <li>
                                <a href="#step-3">Step 3<br/>
                                        <small></small>
                                    </a>
                                </li>

                            </ul>

                            <div>
                                <div id="step-1">
                                    <div class="hr hr-dotted hr-double"></div>
                                    <div id="form-step-0" role="form" data-toggle="validator">
