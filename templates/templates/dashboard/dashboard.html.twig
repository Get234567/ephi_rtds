{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"/>
{% endblock %}
{% block body %}
    <h1>Dataset index</h1>


    <button type="button" class="btn btn-info  pull-right" data-toggle="modal" data-target="#myModal">Filter</button>
    <div id="myModal" class="modal fade" role="dialog">
        <div
            class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Filter Options</h4>
                </div>
                <div class="modal-body">

                    {{ form(filterform, { 'attr': {'class': 'form-inline'} }) }}

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>


        <a href="{{ path('dataset_new') }}">Create new</a>

        <div class="btn-group pull-right">
            <a href="{{ path('dataset_index',{type:'bar'}) }}" class="btn btn-danger">BarChart</a>
            <a href="{{ path('dataset_index',{type:'pie'}) }}" class="btn btn-warning">PieChart</a>
            <a href="{{ path('dataset_index',{type:'histogram'}) }}" class="btn btn-primary">Histogram</a>
        </div>

        <div id="div_chart"></div>
        <div class="error-container">
            <section class="features8 cid-rbaKgiAJ5r" id="features8-1" data-sortbtn="btn-primary" style="opacity: 0.9; background-color: rgb(123, 255, 255);">

                <div class="container-fluid justify-content-center" style="opacity: 0.9; background-color:  #232323; color: #efefef;">
                    <div class="col-sm-3 col-md-6 col-lg-3">
                        <h3>
                            <span>Mission</span>
                        </h3>
                        <hr class="btn-primary"/>
                        <p class="mbr-text mbr-fonts-style display-7">
                            {{ siteInfo.Mission | raw }}
                        </p>
                    </div>
                    <div class="col-sm-3 col-md-6 col-lg-3">
                        <h3>
                            <span>Vision</span>
                        </h3>
                        <hr class="btn-success"/>
                        <p class="mbr-text mbr-fonts-style display-7">
                            {{ siteInfo.Vision | raw }}
                        </p>
                    </div>
                    <div class="col-sm-3 col-md-6 col-lg-3">
                        <h3>
                            <span>Contact Us</span>
                        </h3>
                        <hr class="btn-danger"/>
                        <p class="mbr-text mbr-fonts-style display-7">
                            {{ siteInfo.ContactUs | raw }}
                        </p>
                    </div>
                    <div class="col-sm-3 col-md-6 col-lg-3">
                        <h3 class="">
                            <span>EPHI location</span>
                        </h3>
                        <hr class="btn-warning"/>

                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3940.185424895946!2d38.7296833!3d9.0468444!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b88b1bfe3c943%3A0xc6a61a365a4eed5b!2sEthiopia%20Public%20Health%20Institute%20(EPHI)!5e0!3m2!1sen!2set!4v1572592292586!5m2!1sen!2set" width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen="yes"></iframe>
                    </div>

                </div>


            </div>
        </section>
    {% endblock %}


    {% block javascripts %}
        {{parent()}}

        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
            {{ gc_draw(piechart, 'div_chart') }}</script>

        <script>
            $('form').submit(function () {
                $('.btn-submit').attr('data-dismiss', 'modal');
            });
        </script>


    {% endblock %}
