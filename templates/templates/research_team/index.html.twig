    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for research_team in research_teams %}
            <tr>
                <td>{{ research_team.id }}</td>
                <td>{{ research_team.name }}</td>
                <td>{{ research_team.description }}</td>
                <td>
                    <a href="{{ path('research_team_show', {'id': research_team.id}) }}">show</a>
