{% extends 'base.html.twig' %}

{% block title %}StudySubject index{% endblock %}

{% block body %}
    <h1>StudySubject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for study_subject in study_subjects %}
            <tr>
                <td>{{ study_subject.id }}</td>
                <td>{{ study_subject.name }}</td>
                <td>{{ study_subject.description }}</td>
                <td>
                    <a href="{{ path('study_subject_show', {'id': study_subject.id}) }}">show</a>
                    <a href="{{ path('study_subject_edit', {'id': study_subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('study_subject_new') }}">Create new</a>
{% endblock %}
