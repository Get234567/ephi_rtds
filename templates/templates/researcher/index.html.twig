{% extends 'base.html.twig' %}

{% block title %}Researcher index{% endblock %}

{% block body %}
    <h1>Researcher index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for researcher in researchers %}
            <tr>
                <td>{{ researcher.id }}</td>
                <td>{{ researcher.name }}</td>
                <td>{{ researcher.email }}</td>
                <td>
                    <a href="{{ path('researcher_show', {'id': researcher.id}) }}">show</a>
                    <a href="{{ path('researcher_edit', {'id': researcher.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('researcher_new') }}">Create new</a>
{% endblock %}
