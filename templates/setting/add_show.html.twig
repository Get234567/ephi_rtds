
<div class="row">
{% block menu %}
{% endblock %}
    <div class="col-md-3"></div>
   <div id="add" class="col-md-4">
   <br>
  <div class="box box-success mt-5">
  {{ form_start(form) }}
            <div class="box-header with-border">
              <h3 class="box-title">{{ title }}</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <div class="box-body">
                <div class="form-group">
                  <label for="name">Name</label><br>
                  {{ form_widget(form.name) }}
                   </div>
                <div class="form-group">
                  <label for="description">Description:</label><br>
                    {{ form_widget(form.description) }}
                </div>
              

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                 <button class="btn btn-success"">{{ button_label|default('Add') }}</button>
              </div>

            {{ form_end(form) }}
          </div>








   </div>
   <div id="view" class="col-md-12">
   <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set i=1 %}
        {% for type in types %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ type.name }}</td>
                <td>{{ type.description }}</td>
                <td>
                     <a  class="center btn btn-success" href="{{ path('dataset_async', {'id': type.id,'type':Type}) }}">edit</a>
                      <a data-toggle="modal" data-target="#myModal{{ i }}" style="margin-top: 10px" class="btn btn-danger" >delete</a>

 <div id="myModal{{ i }}" class="modal fade" role="dialog">
 {% set i=i+1 %}
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"> <p>Are you sure?</h4>
      </div>
      <div class="modal-footer">
      <a class="btn btn-danger" href="{{ path('dataset_async', {'id': type.id,'type':Type,'action':'delete'}) }}">Yes</a>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>

  </div>
</div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   </div>
</div>
