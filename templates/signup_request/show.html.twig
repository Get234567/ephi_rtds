{% extends 'base.html.twig' %}

{% block title %}SignupRequest
{% endblock %}
{% block pageheader %}


	<a class="btn btn-success inline" href="{{ path('signup_request_index') }}">back to list</a>
	<h1 class="inline">SignupRequest</h1>
{% endblock %}

{% block body %}


	<table class="table">
		<tbody>


			<tr>
				<th>Name</th>
				<td>{{ signup_request.Name }}</td>
			</tr>
			<tr>
				<th>Sex</th>
				<td>{{ signup_request.user.UserInfo.Sex }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ signup_request.user.email }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ signup_request.user.UserInfo.Phone }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ signup_request.user.UserInfo.Address }}</td>
			</tr>
			<tr>
				<th>Affiliation</th>
				<td>{{ signup_request.user.UserInfo.Affiliation }}</td>
			</tr>


		</tbody>
	</table>


	<form method="post" class="inline" action="{{ path('signup_request_show', {'id': signup_request.id}) }}" onsubmit="return confirm('Are you sure you want to approve this user?');">
		<input type="hidden" name="approve" value="APPROVE">
		<button class="btn btn-sm btn-success">
			<span class="fa fa-check"></span>
			Approve</button>
	</form>
	<form method="post" class="inline" action="{{ path('signup_request_show', {'id': signup_request.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
		<input type="hidden" name="reject" value="DELETE">
		<button class="btn btn-sm btn-danger">
			<span class="fa fa-ban"></span>
			Reject</button>
	</form>


{% endblock %}
