{% extends 'base.html.twig' %}

{% block title %}FosUser
{% endblock %}
{% block pageheader %}

	<a class="btn btn-success" href="{{ path('fos_user_index') }}">back to list</a>
{% endblock %}
{% block breadcrumb %}
    <li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="{{ path('home') }}">Home</a>
							</li>
							<li >
                            <a href="{{ path('home') }}">Users</a>
                            </li>
                            <li class="active">{{ fos_user.username }}</li>
{% endblock %}
{% block body %}


	<table class="table">
		<tbody>
			<tr>
				<th>Full Name</th>
				{% if fos_user.UserInfo %}
				<td>{{ fos_user.UserInfo.Name }}</td>
				{% else %}
					<td>No name</td>
				{% endif %}

			</tr>
			<tr>

				<th>Affiliation
                </th>
					{% if fos_user.UserInfo %}
					<td>{{ fos_user.UserInfo.Affiliation }}</td>
					{% else %}
					<td>no affiliation</td>

			{% endif %}

			</tr>
			<tr>
				<th>Username</th>
				<td>{{ fos_user.username }}</td>
			</tr>

			<tr>
				<th>Email</th>
				<td>{{ fos_user.email }}</td>
			</tr>

			<tr>
				<th>Enabled</th>
				<td>{{ fos_user.enabled ? 'Yes' : 'No' }}</td>
			</tr>


			<tr>
				<th>Last Login</th>
				<td>{{ fos_user.lastLogin ? fos_user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
			</tr>

			<tr>
				<th>Password Requested At</th>
				<td>{{ fos_user.passwordRequestedAt ? fos_user.passwordRequestedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ fos_user.roles ? fos_user.roles|join(', ') : '' }}</td>
			</tr>
            <tr>
				<th>Group</th>
				<td>{{ fos_user.UserGroup }}</td>
			</tr>
		</tbody>
	</table>


	<a class="btn btn-warning inline" href="{{ path('fos_user_edit', {'id': fos_user.id}) }}"><span class="fa fa-pencil"> </span> Edit</a>

	{{ include('fos_user/_delete_form.html.twig') }}
{% endblock %}
