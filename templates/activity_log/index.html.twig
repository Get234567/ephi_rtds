{% extends 'base.html.twig' %}
{% block breadcrumb %}
  <li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="{{ path('home')}}">Home</a>
							</li>
							<li class="active">Requests</li>
{% endblock %}
{% block pageheader %}

{% endblock %}



{% block title %}ActivityLog index{% endblock %}

{% block body %}


    <table class="table">
        <thead>
            <tr>
                <th>Sender</th>
                <th>Request Type</th>
                <th>Item Type</th>
                <th>Item ID</th>
                <th>Remark</th>
                <th>Requested Date</th>
                <th>Show</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_log in activity_logs %}
            <tr>
          
         
                 <td>{{ activity_log.Sender.UserInfo.name }}</td>
                <td>{{ activity_log.RequestType }}</td>
                <td>{{ activity_log.ItemType }}</td>
                <td>{{ activity_log.ItemID }}</td>
                <td>{{ activity_log.Remark }}</td>
                <td>{{ activity_log.RequestedDate ? activity_log.RequestedDate|date('Y-m-d') : '' }}</td>
                <td>
                    {# <a href="{{ path('activity_log_show', {'id': activity_log.id}) }}">Details</a> #}
                      <a href="{{ path('dataset_show', {'id': activity_log.ItemID}) }}">Details</a> 
                </td>

                <td>

  {{ include('activity_log/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 <div class="pull-right">{{ knp_pagination_render(activity_logs) }}</div>  
    
{% endblock %}
