{% extends 'base.html.twig' %}
{% block javascripts %}
<script src="{{ asset('assets/ckeditor/ckeditor.js')}}"></script>


   {% endblock %}
{% block breadcrumb %}
    <li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="{{ path('home') }}">Home</a>
							</li>
<li > Setting</li>
							<li class=""> <a href="{{ path(link ~'_index') }}">{{ name }}</a> </li>
							<li class="active"> Edit {{ name }} true</li>
{% endblock %}
{% block pageheader %}
 <a href="{{ path( link ~ '_index') }}" class="btn btn-sm btn-success">Back to list</a>
{% endblock %}


{% block body %}
 <div class="col-md-8 m-auto">
       {{ form_start(form) }}
                        <div class="form-group">
            <label>{{ form_label(form.name) }}</label>
            {{ form_widget(form.name,{'attr':{'class':''}})}}
            <div class="help-block with-errors"></div>
        </div>
        {% if form.parent %}
        <div class="form-group">
            <label>{{ form_label(form.parent) }}</label>
            {{ form_widget(form.parent,{'attr':{'class':''}})}}
            <div class="help-block with-errors"></div>
        </div>
        {% endif %}

        <div class="form-group">
            <label>{{ form_label(form.description) }}</label>
            {{ form_widget(form.description,{'attr':{'class':'form-control ckeditor'}})}}
            <div class="help-block with-errors"></div>
        </div>

   <button class="btn btn-sm btn-success">{{ button_label|default('Update') }}</button>
{{ form_end(form) }}

  </div>
{% endblock %}
